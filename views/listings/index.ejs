    }
        .tax-info {
      display: none;
      color: #6f42c1;
      font-style: italic;
      font-weight: 500;
    }
   .tax-toggle {
      border: 1px solid #ccc;
      border-radius: 2rem;
      padding: 0.5rem 1rem;
      margin-left: auto;
      display: flex;
      align-items: center;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }
