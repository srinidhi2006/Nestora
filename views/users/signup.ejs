<% layout("/layouts/boilerplate") %>
<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', sans-serif;
    background-color: #f4f4f4;
  }

  .signup-container {
    display: flex;
    align-items: center;
    justify-content: center;
   min-height: 100vh;
  }

  .signup-left {
    flex: 1;
    background: url("https://images.unsplash.com/photo-1600585154340-be6161a56a0c") no-repeat center center;
    background-size: cover;
   height:100vh;
     
  }

  .signup-right {
    flex: 1;
    background-color: white;
    padding: 60px 80px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 600px;
   
  }

  .signup-right h2 {
    font-size: 36px;
    color: #264e36;
    margin-bottom: 30px;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-control {
    width: 100%;
    padding: 14px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 6px;
    background-color: #fff;
  }

  label {
    margin-bottom: 8px;
    font-weight: 500;
    display: block;
    color: #444;
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: #444;
    margin-bottom: 20px;
  }

  .form-options a {
    color: #2a5d3b;
    text-decoration: none;
    font-weight: 600;
  }

  .btn-submit {
    padding: 14px;
    width: 100%;
   
    color: white;
    border: none;
    border-radius: 30px;
    font-size: 16px;
    cursor: pointer;
    margin-bottom: 16px;
  }

  .btn-submit:hover {
    background-color: #1f4a2c;
  }

  .btn-google {
    padding: 14px;
    width: 100%;
    background-color: white;
    border: 1px solid #2a5d3b;
    color: #2a5d3b;
    border-radius: 30px;
    font-size: 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .btn-google img {
    height: 20px;
  }

  @media (max-width: 768px) {
    .signup-container {
      flex-direction: column;
    }

    .signup-left {
      height: 250px;
      width: 100%;
    }

    .signup-right {
      padding: 30px;
    }
  }
</style>

<div class="signup-container">
 
  <div class="signup-left"></div>

  <div class="signup-right">
    <%-include("../includes/flash.ejs")%>
    <h2>Sign Up</h2>
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="Enter your name" required />
      </div>

      <div class="form-group">
        <label for="email">Email address</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Enter password" required />
      </div>

      <div class="form-options">
        <div>
          <input type="checkbox" id="remember" />
          <label for="remember" style="display:inline;">Remember me</label>
        </div>
        <a href="#">Login</a>
      </div>

      <button type="submit" class=" btn-violet btn-submit">Submit</button>

      <button type="button" class="btn-google">
        <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google icon" />
        Login with Google
      </button>
    </form>
  </div>
</div>
