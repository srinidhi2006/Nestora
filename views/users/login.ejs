<% layout("/layouts/boilerplate") %>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', sans-serif;
    background-color: #f4f4f4;
  }

  .login-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }

  .login-box {
    background-color: white;
    padding: 60px 80px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    width: 100%;
    max-width: 500px;
  }

  .login-box h2 {
    font-size: 32px;
    color: #264e36;
    margin-bottom: 30px;
    text-align: center;
  }

  .form-group {
    margin-bottom: 25px;
  }

  .form-control {
    width: 100%;
    padding: 14px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 6px;
    background-color: #fff;
  }

  label {
    margin-bottom: 8px;
    font-weight: 500;
    display: block;
    color: #444;
  }

  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: #444;
    margin-bottom: 20px;
  }

  .form-options a {
    color: #2a5d3b;
    text-decoration: none;
    font-weight: 600;
  }

  .btn-submit {
    padding: 14px;
    width: 100%;
    
    color: white;
    border: none;
    border-radius: 30px;
    font-size: 16px;
    cursor: pointer;
    margin-bottom: 16px;
  }

  .btn-submit:hover {
    background-color: #1f4a2c;
  }

  .btn-google {
    padding: 14px;
    width: 100%;
    background-color: white;
    border: 1px solid #2a5d3b;
    color: #2a5d3b;
    border-radius: 30px;
    font-size: 16px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .btn-google img {
    height: 20px;
  }

  @media (max-width: 768px) {
    .login-box {
      padding: 30px;
    }
  }
</style>

<div class="login-container">
  <div class="login-box">
    <h2>Login</h2>

    <!-- Optional: Flash message include -->
    <%- include("../includes/flash") %>

    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control" placeholder="Enter your username or email" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required />
      </div>

      <div class="form-options">
        <div>
          <input type="checkbox" id="remember" />
          <label for="remember" style="display:inline;">Remember me</label>
        </div>
        <a href="#">Forgot Password?</a>
      </div>

      <button type="submit" class=" btn-violet btn-submit">Login</button>

      <button type="button" class="btn-google">
        <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google icon" />
        Login with Google
      </button>
    </form>
  </div>
</div>
